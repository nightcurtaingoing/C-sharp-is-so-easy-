<Window x:Class="WpfApp1.controlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="控制面板" Height="450" Width="800">
    <Grid>
        <Label Content="LED灯控制" HorizontalAlignment="Left" Margin="472,36,0,0" VerticalAlignment="Top" Width="200" Height="62" FontSize="38"/>
        <Image Source=" images/LED.jpg" HorizontalAlignment="Left" Height="420" Margin="0,0,0,0" VerticalAlignment="Top" Width="403"/>
        <Button x:Name="light" Content="亮" HorizontalAlignment="Left" Margin="382,167,0,0" VerticalAlignment="Top" Width="115" Height="38" FontSize="20" Click="Light_Click"/>
        <Button x:Name="putUP" Content="灭" HorizontalAlignment="Left" Margin="638,167,0,0" VerticalAlignment="Top" Width="115" Height="38" FontSize="20" Click="PutUP_Click"/>
        <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="33" Margin="554,172,0,0" Stroke="Black" VerticalAlignment="Top" Width="33"/>
        <Ellipse x:Name="ball" Fill="#FFDCC7C7" HorizontalAlignment="Left" Height="20" Margin="561,178,0,0" Stroke="Black" VerticalAlignment="Top" Width="20"/>
    </Grid>
</Window>
